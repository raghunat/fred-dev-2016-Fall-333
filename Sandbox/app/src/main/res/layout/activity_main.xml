<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.raghunat.sandbox.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="List View"
            android:onClick="startListViewActivity"/>
        <Button
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="Custom List View"
            android:onClick="startCustomListViewActivity"/>
        <Button
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:text="SQL"
            android:onClick="startSQLActivity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTTP"
            android:onClick="startHttpActivity"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:onClick="startCameraActivity"/>
    </LinearLayout>

</LinearLayout>
